{
  "name": "short-pixel-optimizer/shortpixel-image-optimiser",
  "require": {
    "short-pixel-optimizer/plugin-modules": "*"
  },
    "repositories": [
        {
            "packagist.org": false,
            "type": "vcs",
            "url": "https://github.com/short-pixel-optimizer/plugin-modules.git"
        }
    ],
    "require": {
        "shortpixel/build" : "@dev",
	"shortpixel/filesystem" : "@dev",
	"shortpixel/log" : "@dev",
	"shortpixel/notices":"@dev",
        "shortpixel/replacer" : "@dev",
	"shortpixel/shortq": "@dev",
	"shortpixel/updater": "@dev"
    },
    "require-dev": {
	"phpunit/phpunit": "^9",
	"mikey179/vfsstream": "^1",
	"10up/wp_mock": "@dev",
	"yoast/phpunit-polyfills": "@dev"
    },
   "autoload": {
       "psr-4": { "ShortPixel\\" : "class" , "ShortPixel\\Tests\\" : "tests"}
   },
    "scripts": {
        "post-update-cmd" : "\\ShortPixel\\Build\\Build::BuildIt",
        "buildSP" : "\\ShortPixel\\Build\\Build::BuildIt",
        "buildLoader": "\\ShortPixel\\BuildAutoLoader::buildJSON"
    },
    "extra": {
         "targetNamespace" : "ShortPixel"
    }

}
